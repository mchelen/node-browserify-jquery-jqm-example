{
  "name": "shim-jquery",
  "version": "0.0.0",
  "description": "Example of using browserify-shim to shim jquery for use with browserify",
  "main": "./entry.js",
  "browserify": {
    "transform": [ "browserify-shim" ]
  },
  "browser": {
    "jquery": "./jquery-1.11.1.min.js",
    "jquery-mobile": "./jquery.mobile-1.4.5.min.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "jquery-mobile"    :  { "exports": "$.mobile", "depends": [ "jquery:$" ] }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "",
  "author": "Thorsten Lorenz",
  "license": "BSD",
  "dependencies": {
    "request": "~2.12.0"
  },
  "devDependencies": {
    "browserify": "~2.36.1",
    "browserify-shim": "~3.0.0"
  }
}
